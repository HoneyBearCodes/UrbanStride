<%- include('../includes/head.ejs') %>
  <link rel="stylesheet" href="/css/forms.css" />
  <link rel="stylesheet" href="/css/queries.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <!-- MAIN CONTENT -->
      <main>
        <div class="container">
          <div class="error">
            <% if (errorMessages.length > 0) { %>
             <p class="error-message error-message-popup"><%= errorMessages[0] %></p>
             <% } %>
            <form action="/new-password" method="POST" class="form-control container card">
              <div class="inputs">
                <input type="password" name="pass" placeholder="Enter new password" />
                <button class="submit-btn" type="submit"><span class="material-symbols-outlined">save</span> Update Password</button>
              </div>
              <input type="hidden" name="userId" value="<%= userId %>">
              <input type="hidden" name="resetToken" value="<%= resetToken %>">
              <input type="hidden" name="_csrf" value="<%= CSRFToken %>">
            </form>
          </div>
        <%- include('../includes/end.ejs') %>