<%- include('../includes/head.ejs') %>
<script src="/js/forms.js" defer></script>
  <link rel="stylesheet" href="/css/forms.css" />
  <link rel="stylesheet" href="/css/queries.css" />
  </head>

  <body>
    <%- include('../includes/navigation.ejs') %>

      <!-- MAIN CONTENT -->
      <main>
        <div class="container">
          <div class="error">
            <% if (errorMessages.length > 0) { %>
             <p class="error-message error-message-popup"><%= errorMessages[0] %></p>
             <% } %>
            <form id="submitForm" action="/login" method="POST" class="form-control container card">
              <div class="inputs">
                <input class="<%= invalidFields.includes('email') ? 'err' : '' %>" type="email" name="email" placeholder="Your email" value="<%= oldInput.email %>" onInput="this.classList.remove('err')" />
                <input class="<%= invalidFields.includes('pass') ? 'err' : '' %>" type="password" name="pass"  placeholder="Your password" minlength="8" maxlength="12" value="<%= oldInput.pass %>" onInput="this.classList.remove('err')" />
                <button class="submit-btn" type="submit"><span class="material-symbols-outlined">login</span> Login</button>
                <a class="reset" href="/reset">Forgot Password?</a>
              </div>
              <input type="hidden" name="_csrf" value="<%= CSRFToken %>">
            </form>
          </div>
        <%- include('../includes/end.ejs') %>